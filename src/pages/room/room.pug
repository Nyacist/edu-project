extends ../../components/base/base

include ../../components/header/header
include ../../components/footer/footer

include ../../components/elementTitle/elementTitle
include ../../components/input/input
include ../../components/comfort/comfort


block content
    section
        +header()

    section
        .room__img
            .room__img-main
                img(src=require('../../assets/images/room/room888lux-1.png').default)
            .room__img-sub
                .room__img-sub_top
                    img(src=require('../../assets/images/room/room888lux-2.png').default)
                .room__img-sub_bottom
                    img(src=require('../../assets/images/room/room888lux-3.png').default)

        .room__main
            .room__info
                .room__about
                    +comfort({
                        img: 'emoticon',
                        title: 'Комфорт',
                        text: 'Шумопоглощающие стены'
                    })
                    +comfort({
                        img: 'location-city',
                        title: 'Удобство',
                        text: 'Окно в каждой из спален'
                    })
                .room__rating
                    .room__rating-diagram
                        canvas(id="myChart" width="120" height="120")
                    .room__rating-vote
                        span
                            h1= '260'
                        span= 'голосов'
                    .room__rating-legend
                        ul
                            li= 'Великолепно'
                            li= 'Хорошо'
                            li= 'Удовлетворительно'
                            li= 'Разочарован'


            .room__card
                .card
                    .card__element.room__title
                        .room__number
                            h3 №
                                h1 888
                                span= ' люкс'
                        .room__cost
                            h3= '9 990₽ '
                                span в сутки
                    .card__element.wrapper__column
                        .column__dropdown
                            +title({
                                title: 'прибытие'
                            })
                            +input({
                                type: 'button',
                                value: '19.08.2019',
                                button_type: 'dropdown',
                                arrow: 'arrow_bottom'
                            })
                        .column__dropdown
                            +title({
                                title: 'выезд'
                            })
                            +input({
                                type: 'button',
                                value: '23.08.2019',
                                button_type: 'dropdown',
                                arrow: 'arrow_bottom'
                            })
                    .card__element
                        +title({
                            title: 'гости'
                        })
                        div
                            include ../../components/input/dropdown-guests-data
                            +input({
                                type: 'button',
                                value: '3 гостя',
                                arrow: 'arrow_bottom',
                                classes: 'dropdown',
                                button_type: 'dropdown',
                                button_apply: true,
                                button_clear: true,
                                counts: 'guestsNumbers',
                                items: [{
                                    value: 'взрослые',
                                    number: 2
                                }, {
                                    value: 'дети',
                                    number: 1
                                }, {
                                    value: 'младенцы',
                                    number: 0
                                }]
                            })
                    .card__element.price
                        .price__element
                            .price__name
                                span= '9 990₽ х 4 суток'
                            .price__cost
                                span= '39 960₽'
                        .price__element
                            .price__name
                                span= 'Сбор за услуги: скидка 2 179₽'
                                .price__info
                            .price__cost
                                span= '0₽'
                        .price__element
                            .price__name
                                span= 'Сбор за доп. услуги'
                                .price__info
                            .price__cost
                                span= '300₽'
                    .card__element.total
                        h2 Итого
                        .total__line
                        h2 38 081₽
                    .card__element.card__button
                        +button({
                            value: 'забронировать',
                            classes: 'background',
                            arrow: 'arrow_right'
                        })

    section
        +footer()