//-

  options.id - name и основа для id рейтинга
  options.checked - количество выбранных звезд

mixin rate(options)
    if !options
        - options = {}
    .rate-button
        - for (let i=5; i>0; i--)
            - let checked
            if options.checked == i
                - checked = true

            input(
                class='rate-button__input'
                type='radio'
                name=options.id
                id=options.id + '__' + i
                checked=checked
            )
            label(
                class='rate-button__label'
                for=options.id + '__' + i
            )
