mixin count(title, value)
    .dropdown__option
        h3= title
        .dropdown__count
            input(type='button' value='-' class='sign' data-action='minus')
            h3.count-guests= value
            input(type='button' value='+' class='sign' data-action='plus')

.dropdown
    +item-title('dropdown')
    .dropdown__select
        input(class='dropdown__input dropdown__border item-input' type='button' value='Сколько гостей' onclick='count()')
        .dropdown__wrapper.show(data-action='guestsNumbers')
            +count('взрослые', '2')
            +count('дети', '1')
            +count('младенцы', '0')
            .dropdown__button
                button
                    h3 очистить
                button
                    h3 применить