extends ../../components/base/base

include ../../components/elementTitle/elementTitle
include ../../components/input/input
include ../../components/rateButton/rateButton
include ../../components/rangeSlider/rangeSlider
include ../../components/button/button
include ../../components/pagination/pagination
include ../../components/comfort/comfort
include ../../components/bulletList/bulletList
include ../../components/comment/comment



block content
    .container

        form.form-elements
            .form-elements__column
                .form-item
                    .form-item__title-input
                        +title({
                            title: 'text field'
                        })
                    +input({
                        type: 'email',
                        placeholder: 'Email'
                    })

                .form-item
                    .form-item__title-input
                        +title({
                            title: 'text field'
                        })
                    +input({
                        type: 'text',
                        value: 'This is pretty awesome'
                    })

                .form-item
                    .form-item__title-input
                        +title({
                            title: 'dropdown'
                        })
                    +input({
                        type: 'button',
                        value: 'Сколько гостей',
                        arrow: 'arrow_bottom',
                        buttonType: 'dropdown',
                        wrapperClasses: 'dropdown'
                    })

                .form-item
                    .form-item__title-input
                        +title({
                            title: 'masked text field'
                        })
                    +input({
                        type: 'text',
                        placeholder: 'ДД.ММ.ГГГГ'
                    })

                .form-item.form-item__wrapper
                    .form-item__column
                        .form-item__title-input
                            +title({
                                title: 'dropdown'
                            })
                        +input({
                            type: 'button',
                            value: 'ДД.ММ.ГГГГ',
                            buttonType: 'dropdown',
                            arrow: 'arrow_bottom',
                            wrapperClasses: 'dropdown'
                        })
                    .form-item__column
                        .form-item__title-input
                            +title({
                                title: 'dropdown'
                            })
                        +input({
                            type: 'button',
                            value: '19.08.2019',
                            buttonType: 'dropdown',
                            arrow: 'arrow_bottom',
                            wrapperClasses: 'dropdown'
                        })

                .form-item
                    .form-item__title-input
                        +title({
                            title: 'filter date dropdown'
                        })

                    +input({
                        type: 'button',
                        value: '19 авг - 23 авг',
                        buttonType: 'dropdown',
                        arrow: 'arrow_bottom',
                        wrapperClasses: 'dropdown'
                    })

                .form-item
                    .form-item__title-input
                        +title({
                            title: 'subscription text field'
                        })
                    .wrapper_small
                        +input({
                            type: 'email',
                            placeholder: 'Email',
                            arrow: 'arrow_right'
                        })

            .form-elements__column
                .form-item
                    .form-item__title-button
                        +title({
                            title: 'checkbox buttons'
                        })
                    .form-item__checkbox-block
                        +input({
                            type: 'checkbox',
                            wrapperClasses: 'checkbox',
                            label: 'Можно курить'
                        })
                        +input({
                            type: 'checkbox',
                            wrapperClasses: 'checkbox',
                            label: 'Можно с питомцами',
                            checked: true
                        })
                        +input({
                            type: 'checkbox',
                            wrapperClasses: 'checkbox',
                            label: 'Можно пригласить гостей (до 10 человек)',
                            checked: true,
                        })


                .form-item
                    .form-item__title-button
                        +title({
                            title: 'radio buttons'
                        })
                    .form-item__radiobuttons-block
                        +input({
                            type: 'radio',
                            wrapperClasses: 'radiobutton',
                            name: 'gender',
                            label: 'Мужчина',
                            checked: true
                        })
                        +input({
                            type: 'radio',
                            wrapperClasses: 'radiobutton',
                            name: 'gender',
                            label: 'Женщина'
                        })

                .form-item
                    .form-item__title-button
                        +title({
                            title: 'toggle'
                        })
                    .wrapper
                        +input({
                            type: 'checkbox',
                            wrapperClasses: 'toggle',
                            label: 'Получать спецпредложения',
                            checked: true
                        })
                        +input({
                            type: 'checkbox',
                            wrapperClasses: 'toggle',
                            label: 'Получать спецпредложения',
                        })

                .form-item
                    .form-item__title-button
                        +title({
                            title: 'like button'
                        })
                    .form-item__like-button
                        +input({
                            type: 'button',
                            wrapperClasses: 'like-button',
                            buttonType: 'like',
                            value: '2'
                        })
                        +input({
                            type: 'button',
                            wrapperClasses: 'like-button',
                            buttonType: 'like',
                            value: '12',
                            like: 'like'
                        })
                .form-item
                    .form-item__title-button
                        +title({
                            title: 'rate button'
                        })
                    .form-item__rate-button
                        +rate({
                            checked: 4
                        })
                        +rate({
                            checked: 5
                        })


            .form-elements__column
                .form-item
                    .form-item__range-slider
                        +range-slider({
                            title: 'range slider'
                        })
                .form-item
                    .form-item__title-button
                        +title({
                            title: 'buttons'
                        })

                    .form-item__buttons
                        .form-item__buttons-wrapper
                            +button({
                                value: 'click me',
                                class: 'background'
                            })
                            +button({
                                value: 'click me',
                                class: 'background',
                                disable: true
                            })
                        .form-item__buttons-wrapper
                            +button({
                                value: 'click me',
                                class: 'border'
                            })
                            +button({
                                value: 'click me',
                                class: 'border',
                                disable: true
                            })
                        .form-item__buttons-wrapper
                            +button({
                                value: 'click me',
                                class: 'link'
                            })
                            +button({
                                value: 'click me',
                                class: 'link',
                                disable: true
                            })
                    +button({
                        value: 'перейти к оплате',
                        class: 'background',
                        arrow: 'arrow_right'
                    })

                .form-item
                    .form-item__title-button
                        +title({
                            title: 'pagination'
                        })
                    +page({
                        items: [
                            {
                                value: 1,
                                classes: 'active'
                            }, {
                                value: 2
                            }, {
                                value: 3
                            }, {
                                value: '...'
                            }, {
                                value: 15
                            }, {
                                classes: 'next'
                            }
                        ]
                    })


        form.form-elements
            .form-elements__column
                .form-item
                    .form-item__title-input
                        +title({
                            title: 'dropdown'
                        })
                    +input({
                        type: 'button',
                        value: '19 авг - 23 авг',
                        arrow: 'arrow_bottom',
                        wrapperClasses: 'dropdown',
                        buttonType: 'dropdown'
                    })

                .form-item
                    .form-item__title-input
                        +title({
                            title: 'dropdown'
                        })
                    +input({
                        type: 'button',
                        value: '2 спальни, 2 кровати...',
                        arrow: 'arrow_bottom',
                        wrapperClasses: 'dropdown',
                        buttonType: 'dropdown',
                        show: 'show',
                        counts: 'rooms',
                        items: [
                            {
                                value: 'спальни',
                                number: 2
                            }, {
                                value: 'кровати',
                                number: 2
                            }, {
                                value: 'ванные комнаты',
                                number: 0
                            }
                        ]
                    })

                .form-item
                    +input({
                        type: 'button',
                        value: 'expandable checkbox list',
                        wrapperClasses: 'checkbox-list',
                        buttonType: 'checkbox'
                    })

                .form-item
                    +input({
                        type: 'button',
                        value: 'expandable checkbox list',
                        wrapperClasses: 'checkbox-list',
                        buttonType: 'checkbox',
                        show: 'show',
                        items: [
                            {
                                type: 'checkbox',
                                wrapperClasses: 'checkbox',
                                label: 'Завтрак'
                            }, {
                                type: 'checkbox',
                                wrapperClasses: 'checkbox',
                                label: 'Письменный стол',
                                checked: true
                            }, {
                                type: 'checkbox',
                                wrapperClasses: 'checkbox',
                                label: 'Стул для кормления',
                                checked: true
                            }, {
                                type: 'checkbox',
                                wrapperClasses: 'checkbox',
                                label: 'Кроватка',
                                checked: true
                            }, {
                                type: 'checkbox',
                                wrapperClasses: 'checkbox',
                                label: 'Телевизор'
                            }, {
                                type: 'checkbox',
                                wrapperClasses: 'checkbox',
                                label: 'Шампунь'
                            }
                        ]
                    })

            .form-elements__column
                .form-item
                    .form-item__title-input
                        +title({
                            title: 'dropdown'
                        })
                    +input({
                        type: 'button',
                        value: 'Сколько гостей',
                        arrow: 'arrow_bottom',
                        wrapperClasses: 'dropdown',
                        buttonType: 'dropdown',
                        show: 'show',
                        counts: 'guestsNumbers',
                        button_apply: true,
                        button_clear: true,
                        items: [
                            {
                                value: 'взрослые',
                                number: 0
                            }, {
                                value: 'дети',
                                number: 0
                            }, {
                                value: 'младенцы',
                                number: 0
                            }
                        ]
                    })

                .form__element
                    +title({
                        title: 'rich checkbox buttons'
                    })
                    .wrapper.wrapper_small
                        +input({
                            type: 'checkbox',
                            classes: 'checkbox',
                            label: 'Широкий коридор',
                            text: 'Ширина коридоров в номере           не менее 91 см.'
                        })
                        +input({
                            type: 'checkbox',
                            classes: 'checkbox',
                            label: 'Помощник для инвалидов',
                            text: 'На 1 этаже вас встретит специалист  и проводит до номера.',
                            checked: true
                        })

            .form-elements__column
                .form__element
                    +title({
                        title: 'dropdown'
                    })
                    div
                        include ../../components/input/dropdown-guests-data
                        +input({
                            type: 'button',
                            value: 'Сколько гостей',
                            arrow: 'arrow_bottom',
                            classes: 'dropdown',
                            button_type: 'dropdown',
                            show: 'show',
                            button_apply: true,
                            button_clear: true,
                            counts: 'guestsNumbers',
                            items: locals.dropdownItems
                        })

                .form__element
                    +title({
                        title: 'bullet list'
                    })
                    .wrapper.wrapper_small
                        include ../../components/bulletList/bullet-list-data
                        +bulletList({
                            items: locals.bulletListItems
                        })

        section
            form.form
                .form__column
                    .form__element
                        .wrapper.wrapper__comfort
                            +comfort({
                                img: 'emoticon',
                                title: 'Комфорт',
                                text: 'Шумопоглощающие стены'
                            })
                            +comfort({
                                img: 'location-city',
                                title: 'Удобство',
                                text: 'Окно в каждой из спален'
                            })

                .form-column_extended
                    .form__element
                        +comment({
                            name: 'Мурад Сарафанов',
                            date: '5 дней назад',
                            img: 'photo.png',
                            like: '12',
                            like_status: 'like',
                            text: 'Великолепный матрас на кровати в основной спальне! ' +
                                'А пуфик вообще потрясающий. ' +
                                'И стены, действительно, шумоподавляющие. ' +
                                'Выкрикивал комплименты повару — никто не жаловался из соседей.'
                        })