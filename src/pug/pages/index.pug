doctype html
html
    head
        title Project
    body
        .container
            section.inputs
                form
                    .text-field
                        label
                            h3 text field
                        input(type='text' placeholder='Email')
                    .dropdown
                        label
                            h3 dropdown
                        .dropdown__select
                            input(type='button' value='Сколько гостей')

                    mixin count(title)
                        .dropdown__option
                            h3= title
                            .dropdown__count
                                input(type='button' value='-' class='sign' data-action='minus')
                                h3(data-action='content') 0
                                input(type='button' value='+' class='sign' data-action='plus')
                    .dropdown
                        label
                            h3 dropdown
                        .dropdown__select
                            input(class='dropdown__button' type='button' value='Комнаты')
                            .dropdown__counter
                                +count('спальни')
                                +count('кровати')
                                +count('ванные комнаты')

                    .dropdown.item_size_s
                        label
                            h3 dropdown
                        .dropdown__select
                            input(style="text-overflow: ellipsis;" class='dropdown__button' type='button' value='Комнаты')
                            .dropdown__counter
                                +count('спальни')
                                +count('кровати')
                                +count('ванные комнаты')

