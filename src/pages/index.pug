block content
    .container
        section
            form.form-elements
                .form-column
                    include ../components/item/item

                    include ../components/textField/textField_default

                    include ../components/textField/textField_hover

                    include ../components/dropdown/dropdown

                    include ../components/textField/textField_masked

                    .date-column__dropdown
                        include ../components/dropdown/dropdown_date

                    .filter-date__dropdown.item_size_s
                        include ../components/dropdown/dropdown_filter-date

                    .subscription__text-field.item_size_s
                        include ../components/textField/textField_subscription


                .form-column.item_size_s
                    mixin check(title, id)
                        .checkbox__item
                            input(class='checkbox__input' id= id type='checkbox')
                            label(for=id)= title

                    .checkbox
                        label
                            h3 checkbox buttons
                        .checkbox__content
                            +check('Можно курить', 'smoke')
                            +check('Можно с питомцами', 'pets')
                            +check('Можно пригласить гостей (до 10 человек)', 'guests')

                    mixin radio(title, id)
                        .radiobuttons__item
                            input(class='radiobuttons__input' id=id type='radio' name='radio')
                            label(for=id)=title

                    .radiobuttons
                        label
                            h3 radio buttons
                        .radiobuttons__content
                            +radio('Мужчина', 'man')
                            +radio('Женщина', 'woman')

                    mixin toggle(title, id)
                        .toggle__item
                            input(class='toggle__input' id= id type='checkbox')
                            label(for=id)= title

                    .toggle
                        label
                            h3 toggle
                        .toggle__content
                            +toggle('Получать спецпредложения', 'offers')
                            +toggle('Получать спецпредложения', 'offers-disable')


                    mixin like(value)
                        .like-button__item
                            input(class='like-button__input' type='button' value=value data-action='disable')

                    .like-button
                        label
                            h3 like button
                        .like-button__content
                            +like(2)
                            +like(11)

                    mixin rate(number)
                        input(class='rate-button__input' type='radio' id='star-' + number name='rating' value=number)
                        label(class='rate-button__label' for='star-' + number)
                    .rate-button
                        label
                            h3 rate button
                        .rate-button__content
                            +rate(5)
                            +rate(4)
                            +rate(3)
                            +rate(2)
                            +rate(1)

                .form-column
                    mixin range-slider()
                        .range-slider
                            .range-slider__title
                                label
                                    h3 range slider
                                input(type='text' class='range-slider__amount' readonly)
                            .range-slider__item
                    .range-sliders
                        +range-slider()



                    .buttons-block
                        label
                            h3 buttons
                        .buttons-block__content
                            .buttons-block__buttons
                                .buttons-block__button.buttons-block__button_example
